<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Feedback</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Feedback</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId</b>
    </div>
  </div>

  <form action="/add" method="POST">

  <div class="row form-group mb-4">
    <label class="h5">Personal Information</label>
    <div class="col">
      <label for="fullName">Full Name</label>
      <input type="text" class="form-control" id="fullName" name="fullName" value="" placeholder="Full Name" required>
    </div>

    <div class="col">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" name="email" value="" placeholder="Email" required>
    </div>

    <div class="col">
    <label for="role">Role</label>
    <select class="form-control" id="divi" name="divi" required>
        <option value="">-- Pilih Division --</option>
        <option value="LnT">LnT</option>
        <option value="EEO">EEO</option>
        <option value="PR">PR</option>
        <option value="HRD">HRD</option>
        <option value="RnD">RnD</option>
    </select>
    </div>

  </div>

  <div class="row form-group mb-4">
    <label class="h5">Event Information</label>
    <div class="col">
      <label for="eventName">Event Name</label>
      <input type="text" class="form-control" id="eventName" name="eventName" value="" placeholder="Event Name" required>
    </div>

    <div class="col">
    <label for="rating">Overall Rating</label>
    <select class="form-control" id="rate" name="rate" required>
        <option value="">-- Pilih Rating --</option>
        <option value="1">1 - Sangat Buruk</option>
        <option value="2">2 - Buruk</option>
        <option value="3">3 - Cukup</option>
        <option value="4">4 - Baik</option>
        <option value="5">5 - Sangat Baik</option>
    </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <label class="h5">Your Feedback</label>
    <div class="col">
      <label for="eventName">Comments</label>
      <input type="text" class="form-control" id="comment" name="comment" value="" placeholder="What did you think about the event?" required>
    </div>

    <div class="col">
      <label for="eventName">Suggestions for Improvement</label>
      <input type="text" class="form-control" id="suggestion" name="suggestion" value="" placeholder="How can we make future events better?" required>
    </div>
  </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add Feedback</button>
    </div>
  </form>
